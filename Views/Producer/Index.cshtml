@model IEnumerable<eCinema.Models.Producer>
@{
	ViewData["Title"] = "Producers";
}

<div class="col-md-10 offset-md-1 table-responsive">
	<table class="table">
		<thead class="text-center">
		<th>@Html.DisplayNameFor(Model=>Model.ImageUrl)</th>
		<th>@Html.DisplayNameFor(Model=>Model.FullName)</th>
		<th>@Html.DisplayNameFor(Model=>Model.Bio)</th>
		<th>Action</th>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr class="text-center">
					<td class="align-middle" ><img src="@item.ImageUrl" class="rounded-circle" style="width:150px" /></td>
					<td class="align-middle" >@item.FullName</td>
					<td class="align-middle" >@item.Bio</td>
					<td class="align-middle" >
						<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit </a> |
						<a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details </a> |
						<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete </a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
