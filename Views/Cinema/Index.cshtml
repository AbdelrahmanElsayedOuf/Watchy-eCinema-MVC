@model IEnumerable<eCinema.Models.Cinema>
@{
	ViewData["Title"] = "Cinemas";
}

<div class="col-md-10 offset-md-1 table-responsive">
	<table class="table">
		<thead class="text-center">
		<th>@Html.DisplayNameFor(Model=>Model.Logo)</th>
		<th>@Html.DisplayNameFor(Model=>Model.Name)</th>
		<th>@Html.DisplayNameFor(Model=>Model.Description)</th>
		<th>Action</th>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr class="text-center">
					<td class="align-middle"><img src="@item.Logo" class="rounded-circle" style="width:150px" /></td>
					<td class="align-middle">@item.Name</td>
					<td class="align-middle">@item.Description</td>
					<td class="align-middle">
						<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit </a> |
						<a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details </a> |
						<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete </a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
