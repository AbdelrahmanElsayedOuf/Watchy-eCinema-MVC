@model eCinema.ViewModels.AccountVM

@{
    ViewData["Title"] = "Register";
}

<style>
    .regIcons {
        font-size: 25px;
        margin-top: 30px;
    }
</style>


<section class="vh-30">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <form class="mx-1 mx-md-4" method="post">
                                    <div class="d-flex flex-row align-items-center mb-4 text-danger" asp-validation-summary="All">
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="bi bi-person-badge bi-lg me-3 bi-fw regIcons"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example1c">Your Name</label>
                                            <input asp-for="Username" class="form-control" placeholder="ex. Ahmed99"/>
                                            <span asp-validation-for="Username"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="bi bi-envelope-at bi-lg me-3 bi-fw regIcons"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example3c">Your Email</label>
                                            <input asp-for="Email" class="form-control" placeholder="ex. ahmed@mail.com" />
                                            <span asp-validation-for="Email"></span>

                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="bi bi-file-earmark-lock bi-lg me-3 bi-fw regIcons"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example4c">Password</label>
                                            <input asp-for="Password" class="form-control" />
                                            <span asp-validation-for="Password"></span>

                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="bi bi-key bi-lg me-3 bi-fw regIcons"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example4cd">Repeat your password</label>
                                            <input asp-for="Cpassword" class="form-control" />
                                            <span asp-validation-for="Cpassword"></span>

                                        </div>
                                    </div>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="bi bi-key bi-lg me-3 bi-fw regIcons"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="form3Example4cd">Role</label>
                                                <select asp-items="ViewBag.Roles" name="roleName" class="form-select"></select>
                                            </div>
                                        </div>
                                    }
                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                                        <label class="form-check-label" for="form2Example3">
                                            I agree all statements in <a href="#!">Terms of service</a>
                                        </label>
                                    </div>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <input type="submit" class="btn btn-outline-primary btn-lg" value="Register"/>
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
