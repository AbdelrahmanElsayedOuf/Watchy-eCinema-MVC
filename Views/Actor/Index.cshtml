@model IEnumerable<eCinema.Models.Actor>
@{
	ViewData["Title"] = "List of Actors";
}

<div class="col-md-10 offset-md-1 table-responsive">
	<table class="table">
		<thead class="text-center">
		<th>@Html.DisplayNameFor(Model=>Model.ImageUrl)</th>
		<th>@Html.DisplayNameFor(Model=>Model.FullName)</th>
		<th>@Html.DisplayNameFor(Model=>Model.Bio)</th>
		<th>Action</th>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr class="text-center">
					<td class="align-middle"><img src="@item.ImageUrl" class="rounded-circle" style="width:150px" /></td>
					<td class="align-middle">@item.FullName</td>
					<td class="align-middle">@item.Bio</td>
					<td class="align-middle">
						<a class="btn btn-outline-primary" asp-route-id="@item.Id" asp-action="Edit"><i class="bi bi-pencil-square"></i> Edit </a> |
						<a class="btn btn-outline-info" asp-route-id="@item.Id" asp-action="Details"><i class="bi bi-eye"></i> Details </a> |
						<a class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete"><i class="bi bi-trash"></i> Delete </a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
<div class="text-light" style="position:fixed; right:25px; bottom:25px">
	<a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle">Add New</i></a>
</div>